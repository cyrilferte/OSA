<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag "logo_ban.png" %> 
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">



    <!-- Text link -->
    <%= link_to "Acceuil", root_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to calendar_path, class: "color:red;" do %>
      <i class="fa fa-calendar" aria-hidden="true" style="color:#E30613"></i>
    <% end %>
      <%= link_to "Calendrier", calendar_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <% if user_signed_in? %>

    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <img src="http://placehold.it/50x50" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

          <li> <%= link_to "log out", destroy_user_session_path, method: :delete %> </li>
        </ul>
      </div>
    </div>

    <!-- Button (call-to-action) -->

    <%= link_to "+ Evénement", new_event_path, class:"navbar-wagon-item navbar-wagon-button btn "  %>

      <% else %>
      <%= link_to "Inscription", new_user_registration_path, class:"navbar-wagon-item navbar-wagon-button btn btn-blue" %>
      <%= link_to "Connexion", new_user_session_path, class:"navbar-wagon-item navbar-wagon-button btn btn-blue" %>
  <% end %>
</div>

<div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_signed_in? %>
        <li><a href="#"><%= link_to "Calendrier", calendar_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><a href="#"><%= link_to "+ Evénement", new_event_path, class:"navbar-wagon-item navbar-wagon-button btn "  %></a></li>
        <% else %>
        <li><a href="#"><%= link_to "Calendrier", calendar_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><a href="#"><%= link_to "Inscription", new_user_registration_path, class:"navbar-wagon-item navbar-wagon-button btn btn-blue" %></a></li>
        <li><a href="#"><%= link_to "Connexion", new_user_session_path, class:"navbar-wagon-item navbar-wagon-button btn btn-blue" %></a></li>
                <% end %>
      </ul>
    </div>
  </div>

</div>

